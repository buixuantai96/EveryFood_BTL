<?xml version="1.0" encoding="utf-8"?>
<!-- Bản chất củauaroordinator layout chính là Frame Layout -->
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundTrangChu"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:drawableTop="@drawable/camera_24"
                android:padding="5dp"
                android:text="@string/taianh"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="@color/colorwhite" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:drawableTop="@drawable/location_24"
                android:padding="5dp"
                android:text="@string/checkin"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="12sp"

                />

            <Button
                android:id="@+id/btnBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:drawableTop="@drawable/comment_24"
                android:padding="5dp"
                android:text="@string/binhluan"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="12sp"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:drawableTop="@drawable/bookmark_24"
                android:padding="5dp"
                android:text="@string/luulai"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="12sp"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorBlack"
                android:drawableTop="@drawable/share_24"
                android:padding="5dp"
                android:text="@string/chiase"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="12sp"

                />


        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollViewChiTietQuanAn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorwhite"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"

                        >

                        <ImageView
                            android:id="@+id/imageViewHinhQuanAn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/background" />

                        <VideoView
                            android:id="@+id/videoViewTrailer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/imageViewPlayTrailer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/quantum_ic_play_circle_filled_white_36"
                            android:visibility="gone" />

                    </FrameLayout>


                    <TextView
                        android:id="@+id/txtTenQuanAn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="Gogi House"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/linearLayoutListDiaChi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorBackgroundTrangChu"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTongSoHinhAnh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/taianh" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTongSoCheckIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/checkin" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTongSoComment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/comment" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="123"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTongSoLuuLai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/luulai" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorBackgroundTrangChu"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txtThoiGianHoatDong"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="7:00 - 20:00" />

                        <TextView
                            android:id="@+id/txtTrangThaiHoatDong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:text="Chưa mở cửa"
                            android:textAlignment="viewEnd"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>

                <include layout="@layout/layout_tinhnang_chitietquanan" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackgroundTrangChu"></View>

                <include layout="@layout/layout_wifi_chitietquanan" />

                <include layout="@layout/layout_thucdon_chitiet" />

                <Button
                    android:id="@+id/btnDatMonOdau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/datmon"
                    android:background="@drawable/button_radius_5dp"
                    android:textColor="@color/colorwhite"
                    android:textAllCaps="false"
                    android:layout_margin="5dp"
                    android:drawableTop="@drawable/ship1"
                    android:padding="5dp"
                    android:visibility="gone"
                    />

                <include layout="@layout/layout_binhluan_chitiet_quanan" />


            </LinearLayout>



        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <include layout="@layout/layout_toolbar" />


</android.support.design.widget.CoordinatorLayout>