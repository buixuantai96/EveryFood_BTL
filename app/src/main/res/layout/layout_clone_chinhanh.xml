<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutKhungChiNhanh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/edTenChiNhanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/chinhanh" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <ImageButton
            android:id="@+id/btnThemChiNhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_black"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnXoaChiNhanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/subtract_nho"
            android:scaleType="centerInside"
            android:visibility="gone"
            />





    </FrameLayout>


</LinearLayout>